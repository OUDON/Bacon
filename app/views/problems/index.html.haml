.row
  .col-sm-10.col-sm-offset-1
    = render 'contests/contest_header', { contest: @contest }
    
    - if @contest.contestant?(current_user) or @contest.past?
      = render 'contests/tabs', { active_tab: :problems }

      .problems
        %table{ class: 'table table-striped table-bordered' }
          %thead
            %tr
              %th.center{ width: '5%' }
              %th.center{ width: '95%' } 問題名
          %tbody
            - @contest.problems.each.with_index do |problem, i|
              %tr
                %td.center= link_to ('A'.ord + i).chr, problem.url
                %td= link_to problem.title, problem.url

    - else
      = render 'contests/registration'
